<h1>Listing Animals</h1>
<!-- Purpose: <%= Purpose.displaying_animal_summaries %> -->

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Species</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for animal <- @animals do %>
    <tr>
      <td><%= animal.name %></td>
      <td><%= animal.species.name %></td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Animal", to: Routes.usables_animal_path(@conn, :new) %></span>
