<!-- Purpose: <%= Purpose.reservation_by_animal %> -->

<div class="ui main center aligned text container">
  <%= start_centered_form() %>
  <%= form_for :animal, @path, [class: "ui large form"], fn f -> %>
    <%= small_calendar(f, "Date", :date, unique: "pick_animal") %>
    <%= big_submit_button "Now choose animals" %>
  <% end %>
  <%= end_centered_form() %>
    
</div>
