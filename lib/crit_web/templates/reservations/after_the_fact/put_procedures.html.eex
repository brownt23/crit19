<!-- Purpose: <%= Purpose.after_the_fact_pick_procedures %> -->

<div class="ui main center aligned text container">

  <%= task_header @state %>

  <%= error_flash_above(@conn) %>
  <%= start_centered_form() %>
  <%= form_for :procedures, @path, [class: "ui large form"], fn f -> %>
    <%= hidden_task_id f, @state %>
    <%= multiple_checkbox_column f, @procedures, :chosen_procedure_ids %>
    <%= big_submit_button "Record the use" %>
  <% end %>
  
  <%= end_centered_form() %>
</div>
